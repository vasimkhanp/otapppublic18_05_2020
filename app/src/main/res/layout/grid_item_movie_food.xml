<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_ee"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rectangle_border_gray"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivFood"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            android:background="@color/white"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_no_event_img" />

        <TextView
            android:id="@+id/tvName"
            style="@style/FontOpenSansSemiBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:maxLines="2"
            android:minLines="2"
            android:padding="@dimen/_5sdp"
            android:text="@string/app_name"
            android:textColor="@color/gray_12"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_1sdp"
        android:background="@drawable/bg_rectangle_border_gray"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp">

            <TextView
                style="@style/FontOpenSansSemiBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/price"
                android:textColor="@color/gray_ae"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/tvPrice"
                style="@style/FontOpenSansRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/price"
                android:textColor="@color/red_eb"
                android:textSize="@dimen/_12sdp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tvAdd"
            style="@style/FontOpenSansBold"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/bg_button_primary"
            android:gravity="center"
            android:text="@string/add"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp" />

        <RelativeLayout
            android:id="@+id/rltQuantity"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:visibility="visible">

            <TextView
                android:id="@+id/tvMinus"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/tvQuantity"
                android:background="@drawable/ic_minus_food" />

            <TextView
                android:id="@+id/tvQuantity"
                style="@style/FontOpenSansBold"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@drawable/ic_qty_bg"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_16sdp" />

            <TextView
                android:id="@+id/tvPlus"
                style="@style/FontOpenSansSemiBold"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tvQuantity"
                android:background="@drawable/ic_plus_food" />

            <TextView
                style="@style/FontOpenSansSemiBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/tvMinus"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:text="@string/qty"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_12sdp" />

        </RelativeLayout>
    </LinearLayout>


</LinearLayout>