        <EditText
            android:id="@+id/etDOB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:clickable="false"
            android:focusable="false"
            android:hint="@string/dob"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/gray_64"
            android:textColorHint="@color/gray_64"
            android:textSize="@dimen/_10sdp" />

        <LinearLayout
            android:id="@+id/lnrInternational"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <AutoCompleteTextView
                android:id="@+id/actvPassportNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:hint="@string/passport_number_optional"
                android:imeOptions="actionDone"
                android:inputType="textCapCharacters"
                android:maxLength="20"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/gray_64"
                android:textColorHint="@color/gray_64"
                android:textSize="@dimen/_10sdp" />

            <EditText
                android:id="@+id/etPassportIssueDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:clickable="false"
                android:focusable="false"
                android:hint="@string/passport_issue_date_optional"
                android:inputType="text"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/gray_64"
                android:textColorHint="@color/gray_64"
                android:textSize="@dimen/_10sdp" />

            <EditText
                android:id="@+id/etPassportExpDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:clickable="false"
                android:focusable="false"
                android:hint="@string/passport_exp_date_optional"
                android:inputType="text"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/gray_64"
                android:textColorHint="@color/gray_64"
                android:textSize="@dimen/_10sdp" />

            <AutoCompleteTextView
                android:id="@+id/actvIssuedBy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:hint="@string/passport_issue_by_optional"
                android:inputType="text"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/gray_64"
                android:textColorHint="@color/gray_64"
                android:textSize="@dimen/_10sdp" />

            <!--<View-->
