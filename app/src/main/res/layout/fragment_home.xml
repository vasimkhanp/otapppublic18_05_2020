<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_36sdp"
        android:background="@color/colorPrimary"
        android:padding="@dimen/_5sdp">

        <TextView
            android:id="@+id/tvBack"
            style="@style/FontOpenSansSemiBold"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_more"
            android:visibility="gone" />

        <TextView
            style="@style/FontOpenSansSemiBold"
            android:layout_width="@dimen/_85sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_top_logo_name" />

    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.otapp.net.view.NonScrollGridView
                android:id="@+id/gvServices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@color/white"
                android:horizontalSpacing="@dimen/_1sdp"
                android:listSelector="@color/transparent"
                android:numColumns="4"
                android:scrollbars="none"
                android:verticalSpacing="@dimen/_1sdp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@color/gray_eb" />

            <TextView
                style="@style/FontOpenSansSemiBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:includeFontPadding="false"
                android:text="@string/offers_deals"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_130sdp"
                    android:background="@drawable/bg_trip_family" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvOffer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_68sdp"
                    android:orientation="horizontal"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@color/gray_eb" />


            <TextView
                style="@style/FontOpenSansSemiBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:includeFontPadding="false"
                android:text="@string/why_book"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp" />

            <!--<android.support.v7.widget.RecyclerView-->
            <!--android:id="@+id/rvCity"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentStart="true"-->
            <!--android:layout_marginTop="@dimen/_5sdp"-->
            <!--android:layout_marginRight="@dimen/_10sdp"-->
            <!--android:layout_marginBottom="@dimen/_10sdp"-->
            <!--android:orientation="horizontal" />-->

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvSupport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="@dimen/_6sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@color/gray_eb" />

            <TextView
                android:id="@+id/tvAppVersion"
                style="@style/FontOpenSansSemiBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_10sdp"
                android:text="@string/app_version"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_12sdp"
                android:visibility="gone" />

            <com.otapp.net.view.NonScrollListView
                android:id="@+id/lvAds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:divider="@color/transparent"
                android:dividerHeight="@dimen/_10sdp"
                android:orientation="vertical">

                <!--<TextView-->
                <!--style="@style/FontOpenSansSemiBold"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="@dimen/_40sdp"-->
                <!--android:background="@drawable/bg_ad1" />-->

                <!--<TextView-->
                <!--style="@style/FontOpenSansSemiBold"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="@dimen/_40sdp"-->
                <!--android:layout_marginTop="@dimen/_10sdp"-->
                <!--android:background="@drawable/bg_ad2" />-->

                <!--<TextView-->
                <!--style="@style/FontOpenSansSemiBold"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="@dimen/_40sdp"-->
                <!--android:layout_marginTop="@dimen/_10sdp"-->
                <!--android:layout_marginBottom="@dimen/_10sdp"-->
                <!--android:background="@drawable/bg_ad3" />-->

            </com.otapp.net.view.NonScrollListView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</LinearLayout>