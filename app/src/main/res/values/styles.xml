    </style>

    <style name="ParkFontOpenSansLight">
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="ParkFontOpenSansRegular">
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="FemaleRadioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/female_radio</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="height">24dp</item>
    </style>
    <style name="MaleRadioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/male_radio</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="height">24dp</item>
    </style>

</resources>
