<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvDelete"
        style="@style/FontOpenSansSemiBold"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_gravity="right"
        android:visibility="gone"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:backgroundTint="@color/colorPrimary"
        android:background="@drawable/ic_cancel" />

    <TextView
        style="@style/FontOpenSansSemiBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bus_left_margin"
        android:text="@string/from"
        android:textColor="@color/gray_74"
        android:textSize="@dimen/_12sdp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/FontOpenSansSemiBold"
            android:layout_width="@dimen/bus_pin_width"
            android:layout_height="@dimen/bus_pin_width"
            android:background="@drawable/ic_flight_from" />

        <AutoCompleteTextView
            android:id="@+id/etFromCity"
            style="@style/FontOpenSansSemiBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:completionThreshold="0"
            android:hint="@string/select_city"
            android:imeOptions="actionNext"
            android:inputType="text|textNoSuggestions"
            android:textColor="@color/gray_39"
            android:textColorHint="@color/gray_39"
            android:textSize="@dimen/_15sdp" />


    </LinearLayout>

    <TextView
        style="@style/FontOpenSansSemiBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bus_left_margin"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="@string/to"
        android:textColor="@color/gray_74"
        android:textSize="@dimen/_12sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/FontOpenSansSemiBold"
            android:layout_width="@dimen/bus_pin_width"
            android:layout_height="@dimen/bus_pin_width"
            android:background="@drawable/ic_flight_to" />

        <AutoCompleteTextView
            android:id="@+id/etToCity"
            style="@style/FontOpenSansSemiBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:completionThreshold="0"
            android:hint="@string/select_city"
            android:imeOptions="actionNext"
            android:inputType="text|textNoSuggestions"
            android:textColor="@color/gray_39"
            android:textColorHint="@color/gray_39"
            android:textSize="@dimen/_15sdp" />


    </LinearLayout>

    <TextView
        style="@style/FontOpenSansSemiBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bus_left_margin"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="@string/departure"
        android:textColor="@color/gray_74"
        android:textSize="@dimen/_12sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/FontOpenSansSemiBold"
            android:layout_width="@dimen/bus_pin_width"
            android:layout_height="@dimen/bus_pin_width"
            android:background="@drawable/ic_calendar" />

        <EditText
            android:id="@+id/etDate"
            style="@style/FontOpenSansSemiBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:clickable="false"
            android:focusable="false"
            android:hint="@string/select_date"
            android:imeOptions="actionNext"
            android:textColor="@color/gray_39"
            android:textColorHint="@color/gray_39"
            android:textSize="@dimen/_15sdp" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@color/gray_a7" />

</LinearLayout>

