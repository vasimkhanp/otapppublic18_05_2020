<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lnrContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@drawable/bg_glasses_dialog"
    android:clickable="true"
    android:gravity="center"
    android:layout_margin="@dimen/_10sdp"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp">


    <TextView
        android:id="@+id/tv3dText"
        style="@style/FontNexaBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/_15sdp"
        android:text="@string/msg_3d_text"
        android:textColor="@color/blue_movie"
        android:textSize="@dimen/_15sdp" />

    <TextView
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/bg_3d_glasses" />

    <TextView
        android:id="@+id/tvAdd"
        style="@style/FontOpenSansBold"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_margin="@dimen/_20sdp"
        android:background="@drawable/bg_round_rectangle_blue_movie"
        android:gravity="center"
        android:text="@string/add"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/_13sdp" />

    <RelativeLayout
        android:id="@+id/rltQuantity"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_margin="@dimen/_15sdp"
        android:visibility="visible">

        <TextView
            android:id="@+id/tvMinus"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tvQuantity"
            android:background="@drawable/ic_minus_food" />

        <TextView
            android:id="@+id/tvQuantity"
            style="@style/FontOpenSansBold"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:background="@drawable/ic_qty_bg"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/blue_movie"
            android:textSize="@dimen/_16sdp" />

        <TextView
            android:id="@+id/tvPlus"
            style="@style/FontOpenSansSemiBold"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tvQuantity"
            android:background="@drawable/ic_plus_food" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp">

        <TextView
            android:id="@+id/tvSkip"
            style="@style/FontOpenSansSemiBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_round_border_blue_movie"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text="@string/skip"
            android:textAllCaps="true"
            android:textColor="@color/red_eb"
            android:textSize="@dimen/_13sdp" />

        <TextView
            android:id="@+id/tvContinue"
            style="@style/FontOpenSansSemiBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_weight="1"
            android:background="@drawable/bg_round_rectangle_blue_movie"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text="@string/contin"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp" />

    </LinearLayout>

</LinearLayout>