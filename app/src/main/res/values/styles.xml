<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabMinWidth">@dimen/_50sdp</item>
        <item name="tabPaddingStart">@dimen/_10sdp</item>
        <item name="tabPaddingEnd">@dimen/_10sdp</item>
        <item name="tabBackground">@drawable/tab_background_selector</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColor">@color/tab_color</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="MyEventTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/transparent</item>
        <item name="tabIndicatorHeight">0dp</item>

        <item name="tabMinWidth">@dimen/_50sdp</item>
        <item name="tabPaddingStart">@dimen/_10sdp</item>
        <item name="tabPaddingEnd">@dimen/_10sdp</item>
        <item name="tabBackground">@drawable/tab_event_background_selector</item>
        <item name="tabTextAppearance">@style/MyEventTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="MyEventTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/gray_2d</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="MyMovieTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/blue_movie</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="MyThemeparkTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AddOnsTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="MyFlightkTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/gray_74</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="MyFlightPersonTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/batli_gender</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="MyTripTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="MyMovieReviewTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/gray_87</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="MyMovieDateTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/transparent</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabMinWidth">@dimen/_60sdp</item>
        <item name="tabPaddingStart">@dimen/_15sdp</item>
        <item name="tabPaddingEnd">@dimen/_15sdp</item>
        <item name="tabBackground">@drawable/tab_movie_date_background_selector</item>
        <item name="tabTextAppearance">@style/MyMovieDateTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/movie_tab_selected</item>
    </style>

    <style name="MyMovieDateTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/gray_7f</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/gray_e3</item>
        <item name="colorControlActivated">@color/rating</item>
    </style>

    <style name="bubble_dialog" parent="android:Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <style name="StyledDialog" parent="@android:style/Theme.Panel">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/batli_gender</item>
        <item name="colorSwitchThumbNormal">@color/gray_f1</item>
        <item name="android:colorForeground">@color/gray_90</item>
    </style>

    <style name="SlyCalendarDialogStyle" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="SlyCalendarTimeDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/slycalendar_defHeaderColor</item>
        <item name="colorControlNormal">@color/slycalendar_defHeaderColor</item>
    </style>

    <style name="FontBebasNeueRegular">
        <item name="android:fontFamily">@font/bebas_neue_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="FontNexaBold">
        <item name="android:fontFamily">@font/nexa_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="FontRobotoBold">
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="FontRobotoRegular">
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="FontRobotoMedium">
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="FontOpenSansBold">
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
    </style>

    <style name="FontOpenSansSemiBold">
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="FontRalewaySemiBold">
        <item name="android:fontFamily">@font/raleway_semi_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="FontOpenSansLight">
        <item name="android:fontFamily">@font/open_sans_light</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="FontOpenSansRegular">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="FontSatisfyRegular">
        <item name="android:fontFamily">@font/satisfy_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="FontLatoHeavy">
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/lato_heavy</item>
    </style>

    <style name="FontLatoSemiBold">
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/lato_semibold</item>
    </style>

    <style name="FontLatoBlack">
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/lato_black</item>
    </style>
    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="FontLatoBold">
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="FontLatoRegular">
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    // Event

    <style name="EventFontOpenSansBold">
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="EventFontOpenSansSemiBold">
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="EventFontRalewaySemiBold">
