<?xml version="1.0" encoding="utf-8"?>
<com.otapp.net.view.RoundRectCornerRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_100sdp"
    android:layout_height="@dimen/_100sdp"
    android:layout_marginLeft="@dimen/_10sdp"
    android:background="@color/transparent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivCity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tvCity"
        style="@style/FontOpenSansSemiBold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/black_transparent"
        android:gravity="center"
        android:padding="@dimen/_3sdp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp" />

</com.otapp.net.view.RoundRectCornerRelativeLayout>