<?xml version="1.0" encoding="utf-8"?>
<com.otapp.net.view.RoundRectCornerRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_180sdp"
    android:layout_height="@dimen/_100sdp"
    android:layout_marginLeft="@dimen/_10sdp"
    android:background="@color/transparent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivHolidays"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tvHolidays"
        style="@style/FontSatisfyRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text=""
        android:shadowRadius="2"
        android:shadowDy="1"
        android:shadowDx="1"
        android:shadowColor="@color/black"
        android:textColor="@color/white"
        android:textSize="@dimen/_30sdp" />

</com.otapp.net.view.RoundRectCornerRelativeLayout>