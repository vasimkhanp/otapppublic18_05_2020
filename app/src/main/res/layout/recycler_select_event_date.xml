<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:background="@drawable/bg_round_rectangle_white_with_border"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="3dp"
    android:layout_marginRight="10dp">
    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:gravity="center"
            android:paddingRight="20dp"
            android:id="@+id/tvMonth"
            android:paddingTop="15dp"
            android:textStyle="bold"
            android:paddingBottom="15dp"
            android:background="@drawable/top_rounded_corner"
            android:textColor="@color/white"
            android:text="eventmonth"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvDate"
            android:paddingTop="10dp"
            android:gravity="center"
            android:textColor="@color/gray_68"
            android:textStyle="bold"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="evnetDate"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvTime"
            android:gravity="center"
          android:layout_marginTop="5dp"
            android:paddingLeft="20dp"
            android:textColor="@color/gray_68"
            android:paddingRight="20dp"
            android:text="time"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/actualDate"
            android:visibility="gone"/>

    </LinearLayout>

</RelativeLayout>