    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.otapp.net.view.NonScrollListView
            android:id="@+id/lvCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/transparent"
            android:dividerHeight="0dp"
            android:listSelector="@color/transparent" />

        <TextView
            android:id="@+id/tvAddCity"
            style="@style/FontOpenSansSemiBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/_10sdp"
            android:text="@string/add_city"
            android:textColor="@color/blue"
            android:textSize="@dimen/_12sdp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_a7" />


        <TextView
            style="@style/FontOpenSansSemiBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bus_left_margin"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/travellers"
            android:textColor="@color/gray_74"
            android:textSize="@dimen/_12sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/FontOpenSansSemiBold"
                android:layout_width="@dimen/bus_pin_width"
                android:layout_height="@dimen/bus_pin_width"
                android:background="@drawable/ic_flight_traveller" />

            <EditText
                android:id="@+id/etTravellers"
                style="@style/FontOpenSansSemiBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:clickable="false"
                android:focusable="false"
                android:imeOptions="actionNext"
                android:hint="@string/select_traveller"
                android:textColor="@color/gray_39"
                android:textColorHint="@color/gray_39"
                android:textSize="@dimen/_15sdp" />

        </LinearLayout>

        <TextView
            style="@style/FontOpenSansSemiBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bus_left_margin"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/clas"
            android:textColor="@color/gray_74"
            android:textSize="@dimen/_12sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/FontOpenSansSemiBold"
                android:layout_width="@dimen/bus_pin_width"
                android:layout_height="@dimen/bus_pin_width"
                android:background="@drawable/ic_flight_class" />

            <AutoCompleteTextView
                android:id="@+id/etEconomy"
                style="@style/FontOpenSansSemiBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:completionThreshold="0"
                android:hint="@string/select_class"
                android:imeOptions="actionDone"
                android:inputType="text|textNoSuggestions"
                android:textColor="@color/gray_39"
                android:textColorHint="@color/gray_39"
                android:textSize="@dimen/_15sdp" />


        </LinearLayout>

        <TextView
            android:id="@+id/tvSearchFlight"
            style="@style/FontOpenSansSemiBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:background="@drawable/bg_button_primary"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:text="@string/search_flight"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp" />
    </LinearLayout>
